<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:InfoPanel.ViewModels"
             x:Class="InfoPanel.Views.Pages.HomePage"
             x:DataType="vm:HomePageViewModel">
    <ScrollViewer Padding="20">
        <StackPanel Spacing="24" MaxWidth="800">
            <!-- Welcome -->
            <StackPanel Spacing="4">
                <TextBlock Text="Welcome to InfoPanel" FontSize="28" FontWeight="Bold" />
                <TextBlock Text="Level up your desktop." FontSize="18" Opacity="0.7" />
                <TextBlock Text="{Binding Version}" FontSize="13" Opacity="0.5" Margin="0,4,0,0" />
            </StackPanel>

            <!-- Status Cards -->
            <WrapPanel Orientation="Horizontal">
                <Border Background="#1A808080" CornerRadius="8" Padding="16" Margin="0,0,8,8" MinWidth="160">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Profiles" FontWeight="SemiBold" Opacity="0.7" />
                        <TextBlock Text="{Binding ProfileCount}" FontSize="24" FontWeight="Bold" />
                    </StackPanel>
                </Border>
                <Border Background="#1A808080" CornerRadius="8" Padding="16" Margin="0,0,8,8" MinWidth="160">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Plugins" FontWeight="SemiBold" Opacity="0.7" />
                        <TextBlock Text="{Binding PluginCount}" FontSize="24" FontWeight="Bold" />
                    </StackPanel>
                </Border>
                <Border Background="#1A808080" CornerRadius="8" Padding="16" Margin="0,0,8,8" MinWidth="160">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Web Server" FontWeight="SemiBold" Opacity="0.7" />
                        <TextBlock FontSize="16" FontWeight="Bold">
                            <TextBlock.Text>
                                <Binding Path="IsWebServerEnabled">
                                    <Binding.Converter>
                                        <x:Static Member="vm:BoolToStatusConverter.Instance" />
                                    </Binding.Converter>
                                </Binding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <!-- Quick Start -->
            <StackPanel Spacing="8">
                <TextBlock Text="Quick Start" FontSize="20" FontWeight="SemiBold" />
                <Border Background="#0D808080" CornerRadius="6" Padding="12">
                    <StackPanel Spacing="6">
                        <TextBlock TextWrapping="Wrap" FontSize="13">1. Go to Profiles to manage your display profiles.</TextBlock>
                        <TextBlock TextWrapping="Wrap" FontSize="13">2. Go to Design to add and edit display items (text, sensors, gauges, images).</TextBlock>
                        <TextBlock TextWrapping="Wrap" FontSize="13">3. Toggle a profile's "Active" checkbox to show its overlay on screen.</TextBlock>
                        <TextBlock TextWrapping="Wrap" FontSize="13">4. Go to USB Panels to configure connected LCD panels.</TextBlock>
                        <TextBlock TextWrapping="Wrap" FontSize="13">5. Go to Plugins to manage data source plugins.</TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>

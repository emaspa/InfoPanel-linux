<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:m="using:InfoPanel.Models"
             x:Class="InfoPanel.Views.Components.BarProperties"
             x:DataType="m:BarDisplayItem">
    <Border Background="#1A808080" CornerRadius="6" Padding="12">
        <StackPanel Spacing="8">
            <TextBlock Text="Bar Properties" FontWeight="SemiBold" />

            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Sensor:" VerticalAlignment="Center" Width="80" />
                <TextBlock Text="{Binding SensorName}" VerticalAlignment="Center" Opacity="0.7" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Width:" VerticalAlignment="Center" Width="80" />
                <NumericUpDown Value="{Binding Width}" Minimum="1" Width="100" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Height:" VerticalAlignment="Center" Width="80" />
                <NumericUpDown Value="{Binding Height}" Minimum="1" Width="100" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Radius:" VerticalAlignment="Center" Width="80" />
                <NumericUpDown Value="{Binding CornerRadius}" Minimum="0" Width="100" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Bar Color:" VerticalAlignment="Center" Width="80" />
                <ColorPicker Color="{Binding Color, Converter={StaticResource ColorStringToColorConverter}}"
                             IsAlphaVisible="True" />
            </StackPanel>

            <CheckBox Content="Flip Horizontally" IsChecked="{Binding FlipX}" />

            <Separator />

            <CheckBox Content="Show Frame" IsChecked="{Binding Frame}" />
            <StackPanel Orientation="Horizontal" Spacing="8" IsVisible="{Binding Frame}">
                <TextBlock Text="Frame Color:" VerticalAlignment="Center" Width="80" />
                <ColorPicker Color="{Binding FrameColor, Converter={StaticResource ColorStringToColorConverter}}"
                             IsAlphaVisible="True" />
            </StackPanel>

            <CheckBox Content="Show Background" IsChecked="{Binding Background}" />
            <StackPanel Orientation="Horizontal" Spacing="8" IsVisible="{Binding Background}">
                <TextBlock Text="BG Color:" VerticalAlignment="Center" Width="80" />
                <ColorPicker Color="{Binding BackgroundColor, Converter={StaticResource ColorStringToColorConverter}}"
                             IsAlphaVisible="True" />
            </StackPanel>

            <CheckBox Content="Gradient" IsChecked="{Binding Gradient}" />
            <StackPanel Orientation="Horizontal" Spacing="8" IsVisible="{Binding Gradient}">
                <TextBlock Text="Grad Color:" VerticalAlignment="Center" Width="80" />
                <ColorPicker Color="{Binding GradientColor, Converter={StaticResource ColorStringToColorConverter}}"
                             IsAlphaVisible="True" />
            </StackPanel>

            <Separator />
            <TextBlock Text="Range" FontWeight="SemiBold" FontSize="12" />

            <CheckBox Content="Auto Range" IsChecked="{Binding AutoValue}" />
            <StackPanel Orientation="Horizontal" Spacing="8"
                        IsEnabled="{Binding AutoValue, Converter={StaticResource InverseBooleanConverter}}">
                <TextBlock Text="Min:" VerticalAlignment="Center" Width="80" />
                <NumericUpDown Value="{Binding MinValue}" Width="100" />
                <TextBlock Text="Max:" VerticalAlignment="Center" Margin="8,0,0,0" />
                <NumericUpDown Value="{Binding MaxValue}" Width="100" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

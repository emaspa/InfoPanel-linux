<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:InfoPanel.ViewModels"
             x:Class="InfoPanel.Views.Pages.LogsPage"
             x:DataType="vm:LogsPageViewModel">
    <DockPanel Margin="20">
        <StackPanel DockPanel.Dock="Top" Spacing="8" Margin="0,0,0,12">
            <TextBlock Text="Logs" FontSize="28" FontWeight="Bold" />
            <TextBlock Text="Current session log output" FontSize="14" Opacity="0.7" />
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                <Button Content="Refresh" Command="{Binding LoadLogsCommand}" />
                <Button Content="Copy to Clipboard" Command="{Binding CopyToClipboardCommand}" />
            </StackPanel>
        </StackPanel>

        <Border Background="#1A808080" CornerRadius="6" Padding="8">
            <ScrollViewer>
                <SelectableTextBlock Text="{Binding LogText}" FontFamily="Courier New, monospace"
                                     FontSize="12" TextWrapping="Wrap" />
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>

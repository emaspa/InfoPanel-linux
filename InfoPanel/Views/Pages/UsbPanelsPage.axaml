<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:InfoPanel.ViewModels"
             xmlns:m="using:InfoPanel.Models"
             x:Class="InfoPanel.Views.Pages.UsbPanelsPage"
             x:DataType="vm:UsbPanelsPageViewModel">
    <ScrollViewer Padding="20">
        <StackPanel Spacing="24" MaxWidth="800">
            <TextBlock Text="USB Panels" FontSize="28" FontWeight="Bold" />

            <!-- BeadaPanel -->
            <StackPanel Spacing="8">
                <TextBlock Text="BeadaPanel" FontSize="18" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <CheckBox Content="Enable BeadaPanel Multi-Device Mode"
                              IsChecked="{Binding Settings.BeadaPanelMultiDeviceMode}" />
                    <Button Content="Discover Devices"
                            Command="{Binding DiscoverBeadaPanelDevicesCommand}"
                            IsEnabled="{Binding !IsDiscoveringBeadaPanel}"
                            IsVisible="{Binding Settings.BeadaPanelMultiDeviceMode}" />
                </StackPanel>
                <TextBlock Text="Scanning for BeadaPanel devices..." Opacity="0.6" FontStyle="Italic"
                           IsVisible="{Binding IsDiscoveringBeadaPanel}" />
                <ItemsControl ItemsSource="{Binding BeadaPanelDevices}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="m:BeadaPanelDevice" x:CompileBindings="False">
                            <Border Background="#1A808080" CornerRadius="6" Padding="12" Margin="0,2">
                                <StackPanel Spacing="6">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding RuntimeProperties.Name}" FontWeight="SemiBold" VerticalAlignment="Center" />
                                        <Button Content="Remove"
                                                Command="{Binding $parent[UserControl].DataContext.RemoveBeadaPanelDeviceCommand}"
                                                CommandParameter="{Binding}"
                                                FontSize="11" Padding="8,2" />
                                    </StackPanel>
                                    <TextBlock Text="{Binding DeviceId, StringFormat='ID: {0}'}" FontSize="11" Opacity="0.5" />
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <CheckBox Content="Enabled" IsChecked="{Binding Enabled}" />
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Rotation:" VerticalAlignment="Center" />
                                            <ComboBox ItemsSource="{Binding $parent[UserControl].DataContext.RotationValues}"
                                                      SelectedItem="{Binding Rotation}" Width="140" />
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Brightness:" VerticalAlignment="Center" />
                                        <Slider Value="{Binding Brightness}" Minimum="0" Maximum="100" Width="150" />
                                        <TextBlock Text="{Binding Brightness, StringFormat='{}{0}%'}" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Profile:" VerticalAlignment="Center" />
                                        <ComboBox ItemsSource="{Binding $parent[UserControl].DataContext.Profiles}"
                                                  SelectedValueBinding="{Binding Guid}"
                                                  SelectedValue="{Binding ProfileGuid}"
                                                  Width="200">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate x:DataType="m:Profile">
                                                    <TextBlock Text="{Binding Name}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                    <!-- Runtime status -->
                                    <StackPanel Orientation="Horizontal" Spacing="12" Opacity="0.6">
                                        <TextBlock Text="{Binding RuntimeProperties.FrameRate, StringFormat='FPS: {0}'}" FontSize="11" />
                                        <TextBlock Text="{Binding RuntimeProperties.ErrorMessage}" FontSize="11" Foreground="Red"
                                                   IsVisible="{Binding RuntimeProperties.ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock Text="No BeadaPanel devices configured. Enable multi-device mode and click Discover Devices." Opacity="0.5"
                           IsVisible="{Binding !BeadaPanelDevices.Count}" />
            </StackPanel>

            <!-- Turing Smart Screen -->
            <StackPanel Spacing="8">
                <TextBlock Text="Turing Smart Screen" FontSize="18" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <CheckBox Content="Enable Turing Panel Multi-Device Mode"
                              IsChecked="{Binding Settings.TuringPanelMultiDeviceMode}" />
                    <Button Content="Discover Devices"
                            Command="{Binding DiscoverTuringPanelDevicesCommand}"
                            IsEnabled="{Binding !IsDiscoveringTuringPanel}"
                            IsVisible="{Binding Settings.TuringPanelMultiDeviceMode}" />
                </StackPanel>
                <TextBlock Text="Scanning for Turing panel devices..." Opacity="0.6" FontStyle="Italic"
                           IsVisible="{Binding IsDiscoveringTuringPanel}" />
                <ItemsControl ItemsSource="{Binding TuringPanelDevices}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="m:TuringPanelDevice" x:CompileBindings="False">
                            <Border Background="#1A808080" CornerRadius="6" Padding="12" Margin="0,2">
                                <StackPanel Spacing="6">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" VerticalAlignment="Center" />
                                        <Button Content="Remove"
                                                Command="{Binding $parent[UserControl].DataContext.RemoveTuringPanelDeviceCommand}"
                                                CommandParameter="{Binding}"
                                                FontSize="11" Padding="8,2" />
                                    </StackPanel>
                                    <TextBlock Text="{Binding Model, StringFormat='Model: {0}'}" FontSize="11" Opacity="0.5" />
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <CheckBox Content="Enabled" IsChecked="{Binding Enabled}" />
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Rotation:" VerticalAlignment="Center" />
                                            <ComboBox ItemsSource="{Binding $parent[UserControl].DataContext.RotationValues}"
                                                      SelectedItem="{Binding Rotation}" Width="140" />
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Brightness:" VerticalAlignment="Center" />
                                        <Slider Value="{Binding Brightness}" Minimum="0" Maximum="100" Width="150" />
                                        <TextBlock Text="{Binding Brightness, StringFormat='{}{0}%'}" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Profile:" VerticalAlignment="Center" />
                                        <ComboBox ItemsSource="{Binding $parent[UserControl].DataContext.Profiles}"
                                                  SelectedValueBinding="{Binding Guid}"
                                                  SelectedValue="{Binding ProfileGuid}"
                                                  Width="200">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate x:DataType="m:Profile">
                                                    <TextBlock Text="{Binding Name}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="12" Opacity="0.6">
                                        <TextBlock Text="{Binding RuntimeProperties.FrameRate, StringFormat='FPS: {0}'}" FontSize="11" />
                                        <TextBlock Text="{Binding RuntimeProperties.ErrorMessage}" FontSize="11" Foreground="Red"
                                                   IsVisible="{Binding RuntimeProperties.ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock Text="No Turing panel devices configured. Enable multi-device mode and click Discover Devices." Opacity="0.5"
                           IsVisible="{Binding !TuringPanelDevices.Count}" />
            </StackPanel>

            <!-- Thermalright -->
            <StackPanel Spacing="8">
                <TextBlock Text="Thermalright" FontSize="18" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <CheckBox Content="Enable Thermalright Panel Multi-Device Mode"
                              IsChecked="{Binding Settings.ThermalrightPanelMultiDeviceMode}" />
                    <Button Content="Discover Devices"
                            Command="{Binding DiscoverThermalrightPanelDevicesCommand}"
                            IsEnabled="{Binding !IsDiscoveringThermalrightPanel}"
                            IsVisible="{Binding Settings.ThermalrightPanelMultiDeviceMode}" />
                </StackPanel>
                <TextBlock Text="Scanning for Thermalright panel devices..." Opacity="0.6" FontStyle="Italic"
                           IsVisible="{Binding IsDiscoveringThermalrightPanel}" />
                <ItemsControl ItemsSource="{Binding ThermalrightPanelDevices}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="m:ThermalrightPanelDevice" x:CompileBindings="False">
                            <Border Background="#1A808080" CornerRadius="6" Padding="12" Margin="0,2">
                                <StackPanel Spacing="6">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding RuntimeProperties.Name}" FontWeight="SemiBold" VerticalAlignment="Center" />
                                        <Button Content="Remove"
                                                Command="{Binding $parent[UserControl].DataContext.RemoveThermalrightPanelDeviceCommand}"
                                                CommandParameter="{Binding}"
                                                FontSize="11" Padding="8,2" />
                                    </StackPanel>
                                    <TextBlock Text="{Binding Model, StringFormat='Model: {0}'}" FontSize="11" Opacity="0.5" />
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <CheckBox Content="Enabled" IsChecked="{Binding Enabled}" />
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="Rotation:" VerticalAlignment="Center" />
                                            <ComboBox ItemsSource="{Binding $parent[UserControl].DataContext.RotationValues}"
                                                      SelectedItem="{Binding Rotation}" Width="140" />
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Brightness:" VerticalAlignment="Center" />
                                        <Slider Value="{Binding Brightness}" Minimum="0" Maximum="100" Width="150" />
                                        <TextBlock Text="{Binding Brightness, StringFormat='{}{0}%'}" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Profile:" VerticalAlignment="Center" />
                                        <ComboBox ItemsSource="{Binding $parent[UserControl].DataContext.Profiles}"
                                                  SelectedValueBinding="{Binding Guid}"
                                                  SelectedValue="{Binding ProfileGuid}"
                                                  Width="200">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate x:DataType="m:Profile">
                                                    <TextBlock Text="{Binding Name}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Spacing="12" Opacity="0.6">
                                        <TextBlock Text="{Binding RuntimeProperties.FrameRate, StringFormat='FPS: {0}'}" FontSize="11" />
                                        <TextBlock Text="{Binding RuntimeProperties.ErrorMessage}" FontSize="11" Foreground="Red"
                                                   IsVisible="{Binding RuntimeProperties.ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock Text="No Thermalright panel devices configured. Enable multi-device mode and click Discover Devices." Opacity="0.5"
                           IsVisible="{Binding !ThermalrightPanelDevices.Count}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>

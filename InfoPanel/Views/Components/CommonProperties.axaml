<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:m="using:InfoPanel.Models"
             x:Class="InfoPanel.Views.Components.CommonProperties"
             x:DataType="m:DisplayItem">
    <Border Background="#1A808080" CornerRadius="6" Padding="12">
        <StackPanel Spacing="8">
            <TextBlock Text="Position" FontWeight="SemiBold" />

            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="X:" VerticalAlignment="Center" Width="30" />
                <NumericUpDown Value="{Binding X}" Width="100" Increment="1" />
                <TextBlock Text="Y:" VerticalAlignment="Center" Margin="8,0,0,0" />
                <NumericUpDown Value="{Binding Y}" Width="100" Increment="1" />
            </StackPanel>

            <!-- D-pad nudge buttons -->
            <Grid ColumnDefinitions="Auto,Auto,Auto" RowDefinitions="Auto,Auto,Auto"
                  HorizontalAlignment="Left" Margin="30,4,0,0">
                <Button Grid.Row="0" Grid.Column="1" Content="^" Width="32" Height="28"
                        FontSize="10" Padding="0" HorizontalContentAlignment="Center"
                        Click="NudgeUp_Click" />
                <Button Grid.Row="1" Grid.Column="0" Content="&lt;" Width="32" Height="28"
                        FontSize="10" Padding="0" HorizontalContentAlignment="Center"
                        Click="NudgeLeft_Click" />
                <Button Grid.Row="1" Grid.Column="2" Content="&gt;" Width="32" Height="28"
                        FontSize="10" Padding="0" HorizontalContentAlignment="Center"
                        Click="NudgeRight_Click" />
                <Button Grid.Row="2" Grid.Column="1" Content="v" Width="32" Height="28"
                        FontSize="10" Padding="0" HorizontalContentAlignment="Center"
                        Click="NudgeDown_Click" />
                <NumericUpDown Grid.Row="1" Grid.Column="1" Value="{Binding #MoveStepBox.Value}"
                               IsVisible="False" x:Name="MoveStepHidden" />
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Step:" VerticalAlignment="Center" Width="30" />
                <NumericUpDown x:Name="MoveStepBox" Value="1" Minimum="1" Maximum="100" Width="80" Increment="1" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Rotation:" VerticalAlignment="Center" Width="60" />
                <NumericUpDown Value="{Binding Rotation}" Minimum="0" Maximum="359" Width="100" />
            </StackPanel>

            <CheckBox Content="Hidden" IsChecked="{Binding Hidden}" />
            <CheckBox Content="Locked" IsChecked="{Binding IsLocked}" />
        </StackPanel>
    </Border>
</UserControl>
